@model PreScripds.UI.Models.RoleViewModel
@{
    ViewBag.Title = "AddRole";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@using (Html.BeginForm("AddRole", "Dashboard", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="col-md-12 blackBg">
        <div class="row">
            <div class="col-md-4 col-sm-6">
                <div class="form-group">
                    <label class="control-label" for="LastName">User Role Name</label>
                    @Html.TextBoxFor(m => m.RoleName, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-sm-6">
                <div class="form-group">
                    <label class="control-label" for="MiddleName">User Role Description</label>
                    @Html.TextAreaFor(m => m.RoleDesc, new { @class = "form-control" })
                </div>
            </div>
        </div>
        @foreach (var permission in Model.PermissionViewModel)
        {
            <div class="row">
                @Html.CheckBoxFor(m => permission.PermissionId, new { title = permission.PermissionDesc }) @permission.PermissionName
            </div>
        }
    </div>
}

