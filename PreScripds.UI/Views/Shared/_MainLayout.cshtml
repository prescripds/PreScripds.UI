<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" type="image/x-icon" href="~/Images/favicon.ico">
    <title>PreScripds</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/style.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Content/nav.css" rel="stylesheet" type="text/css" media="all" />
    <link href='http://fonts.googleapis.com/css?family=Carrois+Gothic+SC' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="~/Content/clndr.css" type="text/css" />

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div>
                    <a class="navbar-brand" href="@Url.Action("Index")">
                        <img src="~/Images/logo_532279_web.jpg" alt="prescripds" title="prescripds" />
                    </a>
                </div>

            </div>
            <div class="navbar-collapse collapse">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="wrap" style="margin-top:8%;">
        <div class="header">
            <div class="header_top">
                @Html.Partial("Partials/_Menu")
                <div class="clear"></div>
            </div>
        </div>
    </div>
    <div class="main">
        <div class="wrap">
            @RenderBody()
        </div>
    </div>
    <div class="container body-content">
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - PreScripds</p>
            <div class="col-md-4 col-sm-6 footer-links">
                <ul>

                    <li>
                        <a data-toggle="modal" class="opentac" title="Privacy Policy" href="~/Views/Static/PrivacyPolicy.html" data-target="#">Privacy Policy</a>
                    </li>

                    <li class="last">
                        <a data-toggle="modal" title="Terms and Conditions" class="opentac" href="~/Views/Static/TermsConditions.html" data-target="#">Terms and Conditions</a>
                    </li>
                </ul>
            </div>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/dashboard")
    @RenderSection("scripts", required: false)
    <script type="text/javascript" src="~/Scripts/responsive-nav.js"></script>
</body>
</html>
