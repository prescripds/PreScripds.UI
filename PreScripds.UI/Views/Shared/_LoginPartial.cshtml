                </li>
                <li class="logout"><a href="javascript:document.getElementById('logoutForm').submit()">Sign out</a></li>
            </ul>*@

    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            <div class="btn-group">
                <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown">
                    Sign In/Sign Up <span class="glyphicon glyphicon-log-in" title="Login/Register"></span>
                </button>
                <ul class="dropdown-menu" role="menu">
                    <li>@Html.ActionLink("New User? Sign Up", "Profile", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                    <li class="divider"></li>
                    <li>@Html.ActionLink("Already Here? Sign in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
                </ul>
            </div>
        </li>
    </ul>

}
